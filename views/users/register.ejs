<% layout('layouts/boilerplate') %>
<div class="col-8 offset-2 text-white">
  <h1 class="mb-3">Register</h1>
  <form action="/register" method="post" class="validated-form" novalidate>
    <div class="mb-3">
      <label class="form-label" for="username">Username:</label>
      <input class="form-control" type="text" name="username" id="username" size="80" required />
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">This field can't be empty</div>
    </div>
    <div class="mb-3">
      <label class="form-label" for="email">Email:</label>
      <input class="form-control" type="email" name="email" id="email" size="80" required />
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">This field can't be empty</div>
    </div>
    <div class="mb-3">
      <label class="form-label" for="password">Password:</label>
      <input class="form-control" type="password" name="password" id="password" size="80" required />
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">This field can't be empty</div>
    </div>
    <button class="btn btn-primary">Register</button>
  </form>
</div>
